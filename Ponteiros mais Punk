#include <stdio.h>
#include <locale.h>
void aumenta_sequencia(int* sec)
{
  int i;

  ///Atualizo sequencia somando 1 a todos os valores do array
  for(i=0;i<5;i++)
     sec[i] = sec[i] + 1;

  ///Printo os novos valores
  printf("\nAumenta: ");
  for(i=0;i<5;i++)
  printf("%d ", sec[i]);
  printf("\n");

}
int cria_sequencia(void)
{
    int sequencia[5]={1,11,21,31,41}, i;

    ///Declaro *ponteiro
    int *ponteiro;

    ///aponto ponteiro pra &sequencia
    ponteiro = &sequencia[0];

    ///Printa logo apos que cria
    printf("\nCria: ");
    for(i=0;i<5;i++)
    printf("%d ", sequencia[i]);
    printf("\n");

    ///Printa o que é ponteiro e o que é *ponteiro
    printf("\nponteiro %d\n*ponteiro %d\n", ponteiro, *ponteiro);

    ///mando ponteiro como parametro
    aumenta_sequencia(ponteiro);

    ///Printa a sequencia depois de atualizar
    printf("\nCria depois de aumentar: ");
    for(i=0;i<5;i++)
    printf("%d ", sequencia[i]);
    printf("\n\n");

  ///Retorna o array sem indice o qual ponteiro vai apontar
  return sequencia;
}
int main () {
    setlocale(LC_ALL,"portuguese");

   /// ponteiro mirando posição do resultado de cria_sequencia
   int *p;
   int i;

   p = cria_sequencia();

   for ( i = 0; i < 5; i++ ) {
      printf( "Posição %d do array : %d\n", i, *(p + i));
   }

   return 0;
}
