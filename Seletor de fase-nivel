///Dependendo do nivel, carrega o mapa correspondente desde o arquivo de texto
FILE * seletor_fase(int n)
{
    FILE * arquivo;
    switch(n)
    {
    case 1:
        arquivo = fopen("mapa1.txt", "r");
        textcolor(11);
        break;

    case 2:
        arquivo = fopen("mapa2.txt", "r");
        break;

    case 3:
        arquivo = fopen("mapa3.txt", "r");

    }
    return arquivo;
}

///Preenche a matriz conforme o arquivo de texto que receber relativo ao mapa
void cria_fase(int n,char matriz[31][31],int*linhas, int*colunas)
{

    FILE * PonteiroMapa;
    int i=0, j = 0;
    PonteiroMapa = seletor_fase(n) ;

    if (PonteiroMapa == NULL)
        perror("Arquivo nao pode ser aberto");

    else
    {
        ///Declaracao variaveis
        fscanf(PonteiroMapa,"%d %d", linhas, colunas);

        ///Leitura do arquivo enquanto nao acabar
        while(!feof(PonteiroMapa))
        {
            fgets(matriz[i],*colunas + 2,PonteiroMapa);
            i++;
            if(j==0)
            {
                j++;
                i--;
            }

        }

    }
    fclose(PonteiroMapa);
}

